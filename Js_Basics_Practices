//while Loop:
let nums=[10,20,30,5,0,15];
let sum=0,i=0;
while (nums[i]!=0) {
    sum+=nums[i];
    i++;
}
console.log(sum);

let username="Logeshwari";
let len=username.length-1;
let reverse="";
while (len>=0) {
    reverse+=username.charAt(len);
    len--;
}
console.log(reverse);


