//static keyword:
class Counter{
    static count=0;
    static increment(){
        Counter.count++;
        console.log(Counter.count);
    }
}
Counter.increment();
Counter.increment();

const h1=new Counter();
h1.increment(4);



//Inheritance:
class Vehicle{
    display(){
        console.log("Vehicle Class");
    }
}
class Car extends Vehicle{
    carinfo(){
        console.log("Car Info");
    }
}
const c1=new Car();
c1.display();
c1.carinfo();


class Vehicle{
    display(){
        console.log("Vehicle Class");
    }
}
class Car extends Vehicle{
    display(){
        super.display();
        console.log("Car Class");
    }
}
const c1=new Car();
c1.display();


//super:











class Student
{
    constructor(name,age){
        this.name=name;
        this.age=age;
    }
    display(){
        console.log(`Name:${this.name},Age:${this.age}`);
    }
}
class Address extends Student{
    constructor(name,age,state,city){
        super(name,age);
        this.state=state;
        this.city=city;
    }
    show(){
        super.display();
        console.log(`City:${this.city},State:${this.state}`);
    }
}

const a1=new Address("Logu",22,"Tamil nadu","Namakkal");
a1.show();




