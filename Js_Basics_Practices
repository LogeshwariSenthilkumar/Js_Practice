//switch:
let colors=1;
switch (colors) {
    case 1:
        console.log("Green");
        break;
    case 2:
        console.log("Red");
        break;
    case 3:
        console.log("Yellow");
        break;
    default:
        console.log("Choose valid Color");
        break;
}

let num1=20;
let num2=10;
let choices='-';
switch (choices) {
    case '+':
        console.log(num1+num2);
        break;
    case '-':
        console.log(num1-num2);
        break;
    case '*':
        console.log(num1*num2);
        break;
    case '/':
        console.log(num1/num2);
        break;
    default:
        console.log("Choose valid option");
        break;
}


