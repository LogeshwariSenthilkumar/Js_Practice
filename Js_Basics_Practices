//Shuffle array:
let arr=[1,2,3,4,5];
console.log(arr);
shuffle(arr);
console.log(arr);
function shuffle(elements) {
    for(let i=elements.length-1;i>0;i--){
        const random=Math.floor(Math.random()*(i+1));
        [arr[i],arr[random]]=[arr[random],arr[i]];
    }
}





let arr2=[1,2,3,4,5];
console.log(arr2);
let array=[...arr2];
shuffles(array);
console.log(array);
console.log(arr2);

function shuffles(elements) {
    let newarr=elements;
    for(let i=elements.length-1;i>0;i--){
        const random=Math.floor(Math.random()*(i+1));
        [newarr[i],newarr[random]]=[newarr[random],newarr[i]];
    }
}

