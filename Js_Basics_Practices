//map:
let numbers=[0,1,0,0,1,1];
let booleans=numbers.map(number=>{
    if(number==0){
        return false;
    }
    else{
        return true;
    }
})
console.log(booleans);

let dates=['20240304','20250305','20240514'];
let formatteddates=dates.map((date)=>{
    const year=date.slice(0,4);
    const month=date.slice(4,6);
    const dat=date.slice(6);
    return (`${dat}/${month}/${year}`);
});
console.log(formatteddates);


//filter:
let arrays=[0,"",null,false];
let falsy=arrays.filter((array)=>{
    return array!=0 || array!=false;
})
console.log(falsy);

let numbers=[10,20,30,40,50];
let divby=numbers.filter((number)=>{
    return number%20==0;
})
console.log(divby);


//reduce:
const items=['book','pen','book','pen','pencil','pen'];
let occurence=items.reduce((acc,item)=>{
acc[item]=(acc[item]||0)+1;
return acc;
},{});
console.log(occurence);

const arr2d=[[1,2],[3,4]];
const arr=arr2d.reduce((acc,num)=>{
return acc.concat(num);
},[]);
console.log(arr);

//function expressions:

let palindrome=function(number) {
    let reverse="";
    let original=number;
    let digit;
    while(number>0){
        digit=number%10;
        number=Math.floor(number/10);
        reverse+=digit;
    }
    if(reverse==original){
        console.log("Yes it is Palindrome");
    }
    else{
        console.log("Not a Palindrome");
        
    }
}
palindrome(101);


let add=function(num1,num2){
    console.log(num1+num2);
}
add(7,6);
add(8,9);


