//getters and setters:



class Person{
    constructor(firstname,lastname){
        this.firstname=firstname;
        this.lastname=lastname;
    }
    set firstname(newfirstname){
        if(newfirstname.length>0 && newfirstname!=" "){
            this._firstname=newfirstname;
        }
        else{
            console.error("FirstName should not be empty");
        }
    }
        set lastname(newlastname){
        if(newlastname.length>0 && newlastname!=" "){
            this._lastname=newlastname;
        }
        else{
            console.error("LastName should not be empty");
        }
    }

    get firstname(){
        return this._firstname;
    }
    get lastname(){
        return this._lastname;
    }
    get fullName(){
        return this.firstname+" "+this.lastname;
    }
}

const p1=new Person("Logeshwari","SenthilKumar");

console.log(p1.fullName);


