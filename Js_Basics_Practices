//function:
let flag=0;
function primenum(num) {
    if(num==0 || num==1){
     return "Not a Prime Number";
    }
    else{
        for(let i=2;i<num;i++){
        if(num%i==0){
            flag=1;
            break;
           }
         }
        if(flag==0){
        return "Prime Number";
        }
        else{
            return "Not a Prime Number"
        }
    }
}
console.log(primenum(7));

let name="logeshwari";
captialize(name);
function captialize(name) {
    let first=name.charAt(0).toUpperCase();
    let remaining=name.slice(1).toLowerCase();
    console.log(first+remaining);
    
}

//foreach:
let items=["ListItem1","ListItem2","ListItem3","ListItem4"];
const lists=document.getElementById("lists");
items.forEach((item)=>{
    const li=document.createElement("li");
    li.textContent=item;
lists.append(li);
});


