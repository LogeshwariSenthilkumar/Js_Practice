//Array of Objects:
let students=[{name:"Logu",marks:78},
            {name:"Bharath",marks:88},
            {name:"Janani",marks:64},
            {name:"Hari",marks:55}];

let marksbyfilter=students.filter((student)=>{
    return student.marks>75;
});
console.log(marksbyfilter);

const computemarks=students.map(student=>student.marks).reduce((a,b)=>a+b)/students.length;
console.log(computemarks);


